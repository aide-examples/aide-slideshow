{
    "_comment": "Copy this file to config.json and customize for your setup",
    "port": 8080,
    "pwa": {
        "enabled": true,
        "name": "AIDE Slideshow",
        "short_name": "Slideshow",
        "description": "Raspberry Pi Photo Slideshow Controller",
        "theme_color": "#16a34a",
        "background_color": "#ffffff",
        "icon_192": "/static/icons/icon-192.svg",
        "icon_512": "/static/icons/icon-512.svg",
        "icon": {
            "background": "#16a34a",
            "line1_text": "aide",
            "line1_color": "#94a3b8",
            "line1_size": 0.25,
            "line2_text": "SS",
            "line2_color": "#ffffff",
            "line2_size": 0.45
        }
    },

    "image_dir": "img/show",
    "upload_dir": "img/upload",
    "display_duration": 35,
    "fade_steps": 15,

    "monitor_control": {
        "provider": "cec",
        "cec": {
            "device_id": "0"
        },
        "shelly": {
            "ip": null
        },
        "gpio_relay": {
            "pin": 27,
            "active_low": false
        },
        "samsung_ws": {
            "ip": "192.168.0.197",
            "port": 8002,
            "mac_address": null,
            "token_file": "/home/pi/.samsung_token",
            "name": "RaspberryPiSlideshow",
            "timeout": 5
        }
    },

    "motion_sensor": {
        "provider": "none",
        "idle_timeout": 300,
        "gpio_pir": {
            "pin": 17
        },
        "mqtt": {
            "broker": null,
            "topic": "home/motion/livingroom"
        }
    },

    "remote_update": {
        "source": {
            "repo": "aide-examples/aide-slideshow"
        }
    },

    "layout": {
        "default": "flow",
        "allow_toggle": false
    },

    "remote_control": {
        "http_api": {
            "enabled": true,
            "port": 8080
        },
        "ir_remote": {
            "enabled": false,
            "device": "/dev/input/event0",
            "key_map": {
                "KEY_PLAYPAUSE": "toggle_pause",
                "KEY_PLAY": "resume",
                "KEY_PAUSE": "pause",
                "KEY_NEXT": "skip",
                "KEY_PREVIOUS": "skip",
                "KEY_UP": "speed_down",
                "KEY_DOWN": "speed_up",
                "KEY_POWER": "toggle_monitor",
                "KEY_1": "filter_1",
                "KEY_2": "filter_2",
                "KEY_3": "filter_3",
                "KEY_0": "filter_clear"
            },
            "folder_shortcuts": {
                "filter_1": null,
                "filter_2": null,
                "filter_3": null
            }
        },
        "alexa": {
            "enabled": false,
            "device_name": "Slideshow",
            "port": 12340
        }
    }
}
